           <<  "|                                                                   |\n"
           <<  "|               _____   ______     ______                           |\n"
           <<  "|              |       |      |   |      |   |                      |\n"
           <<  "|              |       |      |   |      |   |                      |\n"
           <<  "|              |       |      |   |      |   |                      |\n"
           <<  "|              |_____  |______|   |______|   |_____                 |\n"
